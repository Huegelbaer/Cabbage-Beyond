<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ListAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ListAppearance.Body.Light" parent="ListAppearance.Body">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ListAppearance.Property.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ListAppearance.Property.Value" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ListAppearance.Header.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Body.Light" parent="TextAppearance.Body">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.Property.Title" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Property.Value" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.Spinner" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="TextAppearance.Spinner2" parent="TextAppearance.Property.Value">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="tint">@color/secondaryColor</item>
    </style>

    <!-- Onboarding -->

    <style name="Onboarding">
        <item name="tint">@color/secondaryColor</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>

    <style name="Onboarding.Image">
        <item name="tint">@color/onPrimaryColor</item>
        <item name="android:maxHeight">160dp</item>
        <item name="android:maxWidth">160dp</item>
    </style>

    <style name="Onboarding.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>

    <style name="Onboarding.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>

    <style name="Onboarding.Button" parent="Onboarding">
        <item name="android:minHeight">@dimen/image_button_size</item>
        <item name="android:minWidth">@dimen/image_button_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Onboarding.Button.Icon" parent="Onboarding.Button">
        <item name="android:backgroundTint">@color/fui_transparent</item>
    </style>

    <style name="Onboarding.Button.Text" parent="Onboarding.Button">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="PropertyEdit">
        <item name="android:ems">10</item>
        <item name="android:minHeight">@dimen/image_button_size</item>
        <item name="android:textAppearance">@style/TextAppearance.Property.Value</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
    </style>

</resources>