<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cabbagebeyond.ui.collection.handicaps.details.HandicapDetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                tools:context=".ui.collection.abilities.details.AbilityDetailsFragment">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <TextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.Property.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/property_name"
                    app:layout_constraintBottom_toBottomOf="@id/edit_name"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/type_title"
                    style="@style/TextAppearance.Property.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/requirement_title"
                    app:layout_constraintBottom_toBottomOf="@id/type_spinner"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/type_spinner" />

                <TextView
                    android:id="@+id/world_title"
                    style="@style/TextAppearance.Property.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/character_world"
                    app:layout_constraintBottom_toBottomOf="@id/world_spinner"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/world_spinner" />

                <TextView
                    android:id="@+id/description_title"
                    style="@style/TextAppearance.Property.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/character_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/world_spinner" />


                <EditText
                    android:id="@+id/edit_name"
                    style="@style/PropertyEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_name"
                    android:inputType="text"
                    android:text="@={viewModel.handicap.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/name"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name_value"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.handicap.name}"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_name"
                    app:layout_constraintEnd_toEndOf="@id/edit_name"
                    app:layout_constraintStart_toStartOf="@id/edit_name"
                    app:layout_constraintTop_toTopOf="@id/edit_name" />

                <Spinner
                    android:id="@+id/type_spinner"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:contentDescription="@string/select_type"
                    android:minHeight="@dimen/image_button_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/edit_name" />

                <TextView
                    android:id="@+id/type_value"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    app:handicapType="@{viewModel.handicap.type}"
                    app:layout_constraintBottom_toBottomOf="@+id/type_spinner"
                    app:layout_constraintEnd_toEndOf="@id/type_spinner"
                    app:layout_constraintStart_toStartOf="@id/type_spinner"
                    app:layout_constraintTop_toTopOf="@id/type_spinner" />

                <Spinner
                    android:id="@+id/world_spinner"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:contentDescription="@string/select_world"
                    android:minHeight="@dimen/image_button_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/type_spinner" />

                <TextView
                    android:id="@+id/world_value"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.handicap.world.name}"
                    app:layout_constraintBottom_toBottomOf="@+id/world_spinner"
                    app:layout_constraintEnd_toEndOf="@id/world_spinner"
                    app:layout_constraintStart_toStartOf="@id/world_spinner"
                    app:layout_constraintTop_toTopOf="@id/world_spinner" />

                <EditText
                    android:id="@+id/edit_description"
                    style="@style/PropertyEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:gravity="start|top"
                    android:hint="@string/enter_description"
                    android:inputType="textMultiLine"
                    android:text="@={viewModel.handicap.description}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description_title"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/description_value"
                    style="@style/TextAppearance.Property.Value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@{viewModel.handicap.description}"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_description"
                    app:layout_constraintEnd_toEndOf="@+id/edit_description"
                    app:layout_constraintStart_toStartOf="@+id/edit_description"
                    app:layout_constraintTop_toTopOf="@+id/edit_description" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/read_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="name_value,type_value,world_value,description_value"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/edit_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:constraint_referenced_ids="edit_name,type_spinner,world_spinner,edit_description"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.onClickFab()}"
            app:descriptionContent="@{@string/edit_description}"
            app:descriptionParameter="@{viewModel.handicap.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_edit"
            app:visibility="@{viewModel.userCanEdit}"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>